#!/usr/bin/env ruby
puts "Welcome to Ruby's tic tac toe"
puts
puts 'Enter first player name:'
player1 = gets.chomp
puts 'Enter second player name:'
player2 = gets.chomp

puts
puts "#{player1} will play with X and #{player2} will play with O"
puts
puts "Let's Start!"
puts
puts '+---+---+---+'
puts '| 1 | 2 | 3 |'
puts '+---+---+---+'
puts '| 4 | 5 | 6 |'
puts '+---+---+---+'
puts '| 7 | 8 | 9 |'
puts '+---+---+---+'
puts
puts "It is #{player1} turn"
puts
puts 'Please select available cell'
gets.chomp

puts "Now it is #{player2} turn"
puts
puts 'Please select available cell'
gets.chomp
puts
puts "The winner is #{player1}"
